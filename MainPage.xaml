<Page
    x:Class="UWPExamProject.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UWPExamProject"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Top">
            <Button Content="Anagrafica - Files - DB" Margin="10" Name="btnAnag" Click="btnAnag_Click" />
            <Button Content="Web HTTP" Margin="10" Name="btnWebHttp" Click="btnWebHttp_Click" />
            <Button Content="Gestione Log" Margin="10" Name="btnLogManager" Click="btnLogManager_Click" />
            <Button Content="Chiudi Esci App" Margin="10" Name="btnExit" Click="btnExit_Click" />
        </StackPanel>
        <Frame x:Name="Mainframe" Grid.Row="1" />
    </Grid>
</Page>
