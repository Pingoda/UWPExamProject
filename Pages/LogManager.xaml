<Page
    x:Class="UWPExamProject.Pages.LogManager"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UWPExamProject.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Padding="20">
        <StackPanel VerticalAlignment="Top" Spacing="10">
            <TextBlock Text="Gestione LOG" 
                       FontSize="22" 
                       HorizontalAlignment="Center"
                       Foreground="BlueViolet"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="10">
                <Button x:Name="btnTest" Content="Genera Eccezione" Click="btnTest_Click"/>
                <Button x:Name="btnLoad" Content="Carica Log" Click="btnLoad_Click"/>
            </StackPanel>

            <ListView x:Name="lvLog"
                      Header="Contenuto File Log:"
                      BorderThickness="1"
                      BorderBrush="Gray"
                      Height="300"
                      Margin="0,10,0,0" />
        </StackPanel>
    </Grid>
</Page>