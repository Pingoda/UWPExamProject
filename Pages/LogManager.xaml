<Page
    x:Class="UWPExamProject.Pages.LogManager"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UWPExamProject.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Padding="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Width="600" 
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Top" 
                    Spacing="10">

            <TextBlock Text="Gestione Log" 
                       FontSize="26"
                       FontWeight="SemiBold"
                       Foreground="#6A0DAD"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,10"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="10">
                <Button x:Name="btnTest" 
                        Content="📛 Genera Eccezione" 
                        Click="btnTest_Click"
                        Background="#6A0DAD"
                        Foreground="White"
                        Padding="10,6"
                        BorderThickness="0"/>
                <Button x:Name="btnLoad" 
                        Content="📜 Carica Log" 
                        Click="btnLoad_Click"
                        Padding="10,6"/>

                <Button x:Name="btnResetLog" 
                        Content="💣 Reset Log" 
                        Click="btnResetLog_Click"
                        Background="#D9534F"
                        Foreground="White"
                        Padding="10,6"
                        BorderThickness="0"/>
            </StackPanel>
        </StackPanel>

        <Border Grid.Row="1"
                Width="600"
                HorizontalAlignment="Center"
                BorderBrush="#CCC"
                BorderThickness="1"
                CornerRadius="6"
                Padding="10"
                Margin="0,10,0,0"
                Background="#413f54">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0"
                           Text="Contenuto File Log:"
                           FontSize="18"
                           FontWeight="SemiBold"
                           Foreground="#E0E0E0"
                           Margin="0,0,0,10"/>

                <ListView x:Name="lvLog"
                          Grid.Row="1"
                          Background="Transparent">

                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding}" 
                                       Foreground="#F0F0F0" 
                                       FontFamily="Consolas"
                                       FontSize="13"
                                       TextWrapping="WrapWholeWords"/>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>
        </Border>
    </Grid>
</Page>