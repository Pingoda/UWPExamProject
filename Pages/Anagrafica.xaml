<Page
    x:Class="UWPExamProject.Pages.Anagrafica"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UWPExamProject.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <ScrollViewer Padding="20" VerticalScrollBarVisibility="Auto">

        <StackPanel Width="400" HorizontalAlignment="Center" Spacing="0">
            <TextBlock Text="Gestione Anagrafica"
                       FontSize="26"
                       FontWeight="SemiBold"
                       Foreground="#6A0DAD"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,10"/>

            <TextBox x:Name="txtEnrollment"
                     Header="Matricola"
                     PlaceholderText="Inserisci la matricola"
                     Margin="0,0,0,4"/>
            <TextBlock x:Name="ErrorEnrollment"
                       Foreground="Red"
                       FontSize="12"
                       Visibility="Collapsed"
                       Margin="0,0,0,12"/>
            <TextBox x:Name="txtFullName"
                     Header="Nominativo"
                     PlaceholderText="Inserisci nome e cognome"
                     Margin="0,0,0,4"/>
            <TextBlock x:Name="ErrorFullName"
                       Foreground="Red"
                       FontSize="12"
                       Visibility="Collapsed"
                       Margin="0,0,0,12"/>

            <TextBox x:Name="txtEmail"
                     Header="Email"
                     PlaceholderText="esempio@email.com"
                     Margin="0,0,0,4"/>
            <TextBlock x:Name="ErrorEmail"
                       Foreground="Red"
                       FontSize="12"
                       Visibility="Collapsed"
                       Margin="0,0,0,12"/>

            <TextBox x:Name="txtPhone"
                     Header="Telefono"
                     PlaceholderText="+39 123 4567890"
                     Margin="0,0,0,4"/>
            <TextBlock x:Name="ErrorPhone"
                       Foreground="Red"
                       FontSize="12"
                       Visibility="Collapsed"
                       Margin="0,0,0,12"/>

            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Spacing="10"
                        Margin="0,15,0,0">
                <Button x:Name="btnInsertRegistry"
                        Content="📝 Inserisci"
                        Click="btnInsertRegistry_Click"
                        Background="#6A0DAD"
                        Foreground="White"
                        Padding="10,6"
                        BorderThickness="0"/>
                <Button x:Name="btnSaveJSON"
                        Content="💾 Salva JSON"
                        Click="btnSaveJSON_Click"
                        Padding="10,6"/>
                <Button x:Name="btnReadJSON"
                        Content="📂 Leggi JSON"
                        Click="btnReadJSON_Click"
                        Padding="10,6"/>
            </StackPanel>

            <Border BorderBrush="#CCC"
                    BorderThickness="1"
                    CornerRadius="6"
                    Padding="10"
                    Margin="0,20,0,0"
                    Background="#413f54">
                <ScrollViewer MaxHeight="200">
                    <TextBlock x:Name="StatusOperation"
                               TextWrapping="WrapWholeWords"
                               FontFamily="Consolas"
                               FontSize="13"
                               Foreground="#F0F0F0"/>
                </ScrollViewer>
            </Border>

        </StackPanel>
    </ScrollViewer>
</Page>